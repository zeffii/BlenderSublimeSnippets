mesh = bpy.data.meshes.new("mesh_name")
mesh.from_pydata(verts=[], edges=[], faces=[])
mesh.update()

obj = bpy.data.objects.new("obj_name", mesh)

scene = bpy.context.scene
scene.objects.link(obj)

